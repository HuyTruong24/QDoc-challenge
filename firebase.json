{
  "firestore": {
    "database": "(default)",
    "location": "us-east1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [

  {
    "source": "functions"
  }

  ],
  "hosting": {
    "public": "app/client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
  ,
  "emulators": {
    "firestore": {
      "port": 8081
    }, 
    "functions": { "port": 5002 }
  }
}
